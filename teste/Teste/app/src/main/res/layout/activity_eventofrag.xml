<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="12dp"
    android:layout_marginTop="17dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Titulo_Eventos"
        android:textAlignment="viewStart"
        android:textAllCaps="false"
        android:textColor="@color/colorLetraTitulo"

        android:textSize="24sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="17dp"
        android:orientation="horizontal"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Periodo_Evento"
            android:textAlignment="viewStart"
            android:textAllCaps="false"

            android:textSize="14sp"
            android:typeface="sans"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <AutoCompleteTextView
            android:id="@+id/actperiodo"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:completionHint="selecione o perÃ­odo desejado: "
            android:completionThreshold="1" />
    </LinearLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lstEventos">
    </ListView>

</LinearLayout>